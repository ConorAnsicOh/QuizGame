	<insert id="createGuest" parameterType="GuestVO">
  		INSERT	INTO	GUEST	(
  			ID
  			, USER_ID
  			, PASSWORD
  			, NICKNAME
  			, EMAIL
			, REGIST_DATE
  		)
  		VALUES	(
  			GUEST_ID_SEQ.NEXTVAL
  			, #{userId}
  			, #{password}
  			, #{nickname}
  			, #{email}
  			, SYSDATE
  		)
  		
  	</insert>
  		<!-- VALUES의 규칙은 VO의 멤버 변수를 #{}넣어 적어준다. -->
	
